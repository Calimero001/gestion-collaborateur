<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Colaborateur</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Colaborateur.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
</head>
<body>
    <header>
        <div class="p-0 m-0 border-0 bd-example m-0 border-0" style="background-color:#4b4276">
            <nav class="navbar navbar-expand-lg bg-body-tertiary">
                <div class="container-fluid">
                    <div class="wrapper">
                        <a class="navbar-brand" href="#">
                            <img src="\IMg\logo3.png" alt="sqli" width="150" height="50">
                        </a>
                    </div>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" href="#" style="color: black; font-size: 40px;">
                                    <i class="bi bi-person-fill"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>

        <div class="wrapper">
            <div class="sidebar">
                <ul>
                    <li>
                        <form>
                            <div class="cntr">
                                <div class="cntr-innr">
                                    <label class="search" for="inpt_search">
                                        <input class="zti" id="inpt_search" type="text" />
                                    </label>
                                </div>
                            </div>
                        </form>
                    </li>
                    <li><a asp-controller="Collaboateur" asp-action="Index"><i class="fas fa-home"></i>Home</a></li>
                    <li><a asp-controller="Collaborateur" asp-action="Index"><i class="fas fa-user"></i>Collaboorateur</a></li>
                    <li><a asp-controller="Projet" asp-action="Index"><i class="fas fa-project-diagram"></i>Projet</a></li>
                </ul>
            </div>
        </div>
    </header>

    <div class="container" sstyle="margin-top: 20px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<style>
    .search {
        display: inline-block;
        position: relative;
        height: 25px; /* Updated height */
        width: 25px; /* Updated width */
        box-sizing: border-box;
        margin: 0px 8px 7px 0px;
        padding: 5px; /* Adjust padding as needed */
        border: 3px solid #9370DB;
        border-radius: 20px;
        transition: all 200ms ease;
        cursor: text;
    }

        .search:after {
            content: "";
            position: absolute;
            width: 3px;
            height: 15px;
            right: -7px;
            top: 15px;
            background: #9370DB;
            border-radius: 3px;
            transform: rotate(-45deg);
            transition: all 200ms ease;
        }

        .search.active,
        .search:hover {
            width: 200px;
            margin-right: 0px;
        }

            .search.active:after,
            .search:hover:after {
                height: 0px;
            }

    .zti {
        width: 100%;
        border: none;
        box-sizing: border-box;
        font-family: Helvetica;
        font-size: 15px;
        color: inherit;
        background: transparent;
        outline-width: 0px;
    }

</style>
