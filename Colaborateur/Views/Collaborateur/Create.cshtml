@model Collaborateur
@{
    ViewData["Title"] = "Create a Collaborateur";
}

<div class="row text" style="margin-left:190px">
    <div class="col-md-8 offset-md-2">
        <h1><i class="bi bi-person-plus-fill"></i> Add a New Collaborateur :</h1>
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Maricule" class="control-label">Matricule :</label>
                <input asp-for="Maricule" class="form-control" />
                <span asp-validation-for="Maricule" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label">Full Name :</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CIN" class="control-label">CIN :</label>
                <input asp-for="CIN" class="form-control" />
                <span asp-validation-for="CIN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email :</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateEntree_SQLI" class="control-label">Date Entrée-SQLI :</label>
                <input asp-for="DateEntree_SQLI" type="date" class="form-control" />
                <span asp-validation-for="DateEntree_SQLI" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="N_Tel" class="control-label">Phone Number :</label>
                <input asp-for="N_Tel" class="form-control" />
                <span asp-validation-for="N_Tel" class="text-danger"></span>
            </div>
            <div class="form-group" style="width: 70%;margin-left: auto;margin-right: auto;">
                <div class="d-flex justify-content-between">
                <input type="submit" value="Create" class="btn btn-outline-success float-right" style="flex: 1; margin-right: 10px;" />
                <a class="btn btn-outline-secondary" asp-action="Index" style="flex: 1;">Show All</a>
                </div>
            </div>
        </form>
    </div>
</div>
<style>
    .text {
        text-align: center;
        margin-top: 20px;
    }

    h1 {
        //margin-left:40px;
        text-align: center;
        font-family: Georgia, serif;
        font-style: italic;
        color: #9370DB;
        text-decoration-line: underline;
        font-size: 35px;
        font-weight: Semi Bold;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 70%;
        margin-left: auto;
        margin-right: auto;
        left,
        padding: 8px;
        border: 1px solid #9370DB;
        border-radius: 35px;
        box-sizing: border-box;
    }

    .btn {
        width: 70%;
    }

    label {
        font-family: Georgia, serif;
        font-style: italic;
        font-weight: Semi Bold;
    }
</style>