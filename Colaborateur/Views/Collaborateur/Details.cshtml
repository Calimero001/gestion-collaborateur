@model Collaborateur
@{
    ViewData["Title"] = "Creat a Collaborateur";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1> <i class="bi bi-eye-fill"></i> Detail Of  @Model.FullName :</h1>
        </p>
        <div class="row" style="margin-left:190px">
            <div class="col-md-8 offset-2">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                    <label asp-for="Maricule" class="control-label">Maricule :</label>
                        <input asp-for="Maricule" class="form-control" readonly />
                        <span asp-validation-for="Maricule" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                    <label asp-for="FullName" class="control-label">Full Name :</label>
                        <input asp-for="FullName" class="form-control" readonly />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                <div class="form-group">
                    <label asp-for="CIN " class="control-label">CIN :</label>
                    <input asp-for="CIN " class="form-control" readonly />
                    <span asp-validation-for="CIN " class="text-danger"></span>
                </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Email :</label>
                        <input asp-for="Email" class="form-control" readonly />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                    <label asp-for="DateEntree_SQLI " class="control-label">Date Entree_SQLI :</label>
                        <input asp-for="DateEntree_SQLI " type="date" class="form-control" readonly />
                        <span asp-validation-for="DateEntree_SQLI " class="text-danger"></span>
                    </div>
                    <div class="form-group">
                    <label asp-for="N_Tel" class="control-label">Phone Number : :</label>
                        <input asp-for="N_Tel" class="form-control" readonly/>
                        <span asp-validation-for="N_Tel" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-success" style="flex: 1; margin-right: 10px;" />Edit</a>
                            <a href="/Collaborateur/Index" class="btn btn-outline-secondary" style="flex: 1;">Show All</a>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>
<style>
    .text {
        text-align: center;
        margin-top: 20px;
    }

    h1 {
        margin-left:150px;
        text-align: center;
        font-family: Georgia, serif;
        font-style: italic;
        color: #9370DB;
        text-decoration-line: underline;
        font-size: 35px;
        font-weight: Semi Bold;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        margin-left: auto;
        margin-right: auto;
        left, padding: 8px;
        border: 1px solid #9370DB;
        border-radius: 35px;
        box-sizing: border-box;
    }

    .btn {
        width: 70%;
    }

    label {
        font-family: Georgia, serif;
        font-style: italic;
        font-weight: Semi Bold;
    }
</style>